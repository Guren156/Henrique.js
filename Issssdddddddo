// src/api/productService.js

const PRODUCTS_KEY = 'products';

// Dados iniciais caso não haja nada no localStorage
const initialProducts = [
  { id: 1, name: 'Notebook Gamer', description: 'Notebook de alta performance para jogos.', price: 7500.99 },
  { id: 2, name: 'Mouse sem Fio', description: 'Mouse ergonômico com 6 botões.', price: 150.50 },
  { id: 3, name: 'Teclado Mecânico', description: 'Teclado com switches blue e RGB.', price: 350.00 },
];

// Inicializa o serviço
const initialize = () => {
  if (!localStorage.getItem(PRODUCTS_KEY)) {
    localStorage.setItem(PRODUCTS_KEY, JSON.stringify(initialProducts));
  }
};

initialize();

export const getProducts = () => {
  const products = localStorage.getItem(PRODUCTS_KEY);
  return products ? JSON.parse(products) : [];
};

export const addProduct = (product) => {
  const products = getProducts();
  const newProduct = {
    ...product,
    id: new Date().getTime(), // Gera um ID único baseado no tempo
    price: parseFloat(product.price) // Garante que o preço é um número
  };
  const updatedProducts = [...products, newProduct];
  localStorage.setItem(PRODUCTS_KEY, JSON.stringify(updatedProducts));
  return newProduct;
};

export const deleteProduct = (productId) => {
  let products = getProducts();
  products = products.filter(p => p.id !== productId);
  localStorage.setItem(PRODUCTS_KEY, JSON.stringify(products));
};







